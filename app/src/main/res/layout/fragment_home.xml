<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.HomeFragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardElevation="@dimen/_2sdp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/Bcs"
                android:background="@color/white"
                android:textColor="#1174CA"
                android:textStyle="bold"
                android:textSize="@dimen/_22sdp"/>
        </androidx.cardview.widget.CardView>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/liveExam"
                    android:fontFamily="@font/baloo_bhaina_2_medium"
                    android:textColor="@color/light_black_font"
                    android:textSize="@dimen/_20ssp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/round_bg"
                    >
                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:src="@drawable/study"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="@string/daily_model_test"
                            android:includeFontPadding="false"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="12dp"
                            android:textSize="24sp"
                            android:fontFamily="@font/baloo_bhaina_2_medium"
                            android:textStyle="bold"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="8dp"
                            android:gravity="center_vertical"
                            android:paddingBottom="8dp"
                            >

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                app:shapeAppearanceOverlay="@style/roundedImageViewStyle"
                                android:src="@drawable/question_icon"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/baloo_bhaina_2_medium"
                                android:text="@string/question"
                                android:textColor="@color/white"
                                android:paddingStart="8dp"
                                android:textStyle="bold"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="32dp"
                            android:gravity="center_vertical"
                            >
                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                app:shapeAppearanceOverlay="@style/roundedImageViewStyle"
                                android:src="@drawable/clock_icon"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/baloo_bhaina_2_medium"
                                android:text="@string/time"
                                android:textColor="@color/white"
                                android:paddingStart="8dp"
                                android:textStyle="bold"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="-4dp"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloo_bhaina_2_medium"
                        android:text="বিষয় সমূহ"
                        android:textColor="@color/light_black_font"
                        android:textSize="@dimen/_20ssp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:text="@string/showAll"
                        android:textSize="@dimen/_14ssp"
                        android:id="@+id/btnShowAllSubject"
                        android:textColor="@color/black"
                        android:gravity="end"
                        android:textStyle="bold"/>

                </LinearLayout>



                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:scrollIndicators="none"
                    android:id="@+id/scrollView"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:background="@drawable/round_bg"
                            >

                            <ImageView
                                android:layout_width="130dp"
                                android:layout_height="130dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginStart="@dimen/_17sdp"
                                android:layout_marginEnd="@dimen/_17sdp"
                                android:src="@drawable/study_icon"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/baloo_bhaina_2_medium"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:text="বাংলা"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_20ssp"
                                android:textStyle="bold" />

                        </LinearLayout>
                        <!--            <include-->
                        <!--                layout="@layout/item_subject"/>-->

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical"
                            android:background="@drawable/round_bg"
                            >

                            <ImageView
                                android:layout_width="130dp"
                                android:layout_height="130dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginStart="@dimen/_17sdp"
                                android:layout_marginEnd="@dimen/_17sdp"
                                android:src="@drawable/study_icon"

                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="ইংরেজি"
                                android:includeFontPadding="false"
                                android:paddingTop="10dp"
                                android:gravity="center"
                                android:paddingBottom="10dp"
                                android:layout_marginTop="8dp"
                                android:textSize="@dimen/_20ssp"
                                android:fontFamily="@font/baloo_bhaina_2_medium"
                                android:textStyle="bold"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_marginStart="10dp"
                            android:id="@+id/showAll"
                            android:orientation="vertical"
                            android:background="@drawable/round_bg"
                            >

                            <ImageView
                                android:layout_width="130dp"
                                android:layout_height="130dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginStart="@dimen/_17sdp"
                                android:layout_marginEnd="@dimen/_17sdp"
                                android:src="@drawable/study_icon"

                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="সবগুলো"
                                android:includeFontPadding="false"
                                android:paddingTop="10dp"
                                android:gravity="center"
                                android:paddingBottom="10dp"
                                android:layout_marginTop="8dp"
                                android:textSize="@dimen/_20ssp"
                                android:fontFamily="@font/baloo_bhaina_2_medium"
                                android:textStyle="bold"/>

                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/practice"
                        android:fontFamily="@font/baloo_bhaina_2_medium"
                        android:textColor="@color/light_black_font"
                        android:textSize="@dimen/_20ssp"
                        android:layout_marginTop="20dp"

                        />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:id="@+id/exams"
                            android:background="@drawable/half_round_bg"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:padding="12dp"
                                android:layout_marginStart="6dp"
                                android:src="@drawable/exam_test_icon"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/overAllExam"
                                android:textStyle="bold"
                                android:textSize="@dimen/_12ssp"
                                android:textColor="@color/white"
                                android:layout_marginEnd="10dp"
                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:id="@+id/btnQuestionBank"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/half_round_bg"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:padding="12dp"
                                android:layout_marginStart="6dp"

                                android:src="@drawable/question"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/questionBank"
                                android:textStyle="bold"
                                android:textSize="@dimen/_12ssp"
                                android:layout_marginStart="5dp"
                                android:textColor="@color/white"
                                android:layout_marginEnd="10dp"
                                />


                        </LinearLayout>



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal">




                        <LinearLayout
                            android:layout_width="0dp"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:id="@+id/practice"
                            android:gravity="center_vertical"
                            android:background="@drawable/half_round_bg"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:padding="12dp"
                                android:layout_marginStart="6dp"
                                android:src="@drawable/practice_icon"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/practice"
                                android:textStyle="bold"
                                android:textSize="@dimen/_12ssp"
                                android:layout_marginStart="5dp"
                                android:textColor="@color/white"
                                android:layout_marginEnd="10dp"
                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/half_round_bg"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:padding="12dp"
                                android:layout_marginStart="6dp"
                                android:src="@drawable/marked_icon"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/marked_question"
                                android:textStyle="bold"
                                android:textSize="@dimen/_12ssp"
                                android:layout_marginStart="5dp"
                                android:textColor="@color/white"
                                android:layout_marginEnd="10dp"
                                />


                        </LinearLayout>



                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>


        </ScrollView>


    </LinearLayout>




</FrameLayout>